<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3717.bcit.ca.projectapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategorySoupDetailActivity"
            android:label="@string/title_activity_recipe_detail"
            android:parentActivityName=".MainActivity"></activity>
        <activity
            android:name=".RecipeFragmentDetail"
            android:label="@string/title_activity_recipe_detail"
            android:parentActivityName=".MainActivity"></activity>
        <activity android:name=".CreateActivity"></activity>
    </application>

</manifest>